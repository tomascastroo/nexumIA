# ============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================================================
DATABASE_URL=postgresql://nexum:nexum@nexum-db:5432/nexum
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600

# ============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================================================
SECRET_KEY=your_super_secret_key_here_minimum_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Clave de encriptación para datos sensibles
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# ============================================================================
# CONFIGURACIÓN DE REDIS Y CACHE
# ============================================================================
REDIS_HOST=nexum-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# CONFIGURACIÓN DE CELERY (PROCESAMIENTO ASÍNCRONO)
# ============================================================================
CELERY_BROKER_URL=redis://nexum-redis:6379/1
CELERY_RESULT_BACKEND=redis://nexum-redis:6379/2
CELERY_WORKER_CONCURRENCY=4

# ============================================================================
# CONFIGURACIÓN DE IA Y SERVICIOS EXTERNOS
# ============================================================================
OPENAI_API_KEY=
OPENAI_RATE_LIMIT=3

# ============================================================================
# CONFIGURACIÓN DE WHATSAPP
# ============================================================================
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_RATE_LIMIT=50

# ============================================================================
# CONFIGURACIÓN DE PAGOS
# ============================================================================
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_token
MERCADOPAGO_WEBHOOK_SECRET=your_mercadopago_webhook_secret
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
MOCK_WEBHOOK_SECRET=mock_secret_key_for_testing

# ============================================================================
# CONFIGURACIÓN DE MONITOREO
# ============================================================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# ============================================================================
# CONFIGURACIÓN DE CORS
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# ============================================================================
# CONFIGURACIÓN DE RATE LIMITING
# ============================================================================
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60

# ============================================================================
# CONFIGURACIÓN DE ENTORNO
# ============================================================================
ENVIRONMENT=development
DEBUG=true 